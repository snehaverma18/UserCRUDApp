<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
     <script src="https://cdn.tailwindcss.com"></script>

    <title>Document</title>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
    <a href="/" class="text-blue-500">Back to Home</a>
    <h1 class="text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
    <div class="users flex gap-3 flex-wrap ">
      <% if(users.length>0){ %>
       <% users.forEach(function(user){ %>
         <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-72 bg-zinc-700 overflow-hidden  rounded-lg">
                <img src="<%= user.url%>" alt="" class="w-full h-full object-cover object-top">
                

            </div>
            

            <h3 class="text-xl tracking-tighter mt-3"><%= user.name%></h3>
            <h5 class="text-zinc-500"><%= user.email%></h5>
            <div class="flex gap-3 mt-10">
                <a class="text-blue-600" href="/edit/<%=user._id%>">Edit User</a>
                <a href="/delete/<%= user.id%>" class="text-red-500">Delete user</a>
            </div>

        </div>


      <% }) %>
      <%} else{ %>
        <h3 class="text-zinc-500">No users yet</h3>
      <% } %>

         

    
    </div>

   
  </div>

    
</body>
</html>